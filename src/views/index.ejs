
<!DOCTYPE html>
<html>
<head>
 <meta charset="UTF-8">

 <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
 
</head>
<body>
    <nav class="navbar navbar-dark bg-dark mb-4">
        <a href="/" class="="navbar-brand>Clientes </a>
    </nav>

    <div class="container" style="margin-left: 2%;">
        <div class="row">

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                                <div class="form-group">
                                    <input type="text" name="Address" class="form-control">
                                </div>
                                <div class="form-group">
                                <input type="text" name="City" class="form-control">
                                </div>
  
                                <div class="form-group">
                                    <input type="text" name="Country" class="form-control">
                                    </div>

                                <div class="form-group">
                                    <input type="text" name="District" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="FirstName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="LastName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="text" name="Status" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">Add</button>
            
                            </div>
                        </form>

                    </div>
                </div>
          

            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                  <thead>
                    <tr>
                        <th>_id</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Country</th>
                        <th>District</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Status</th>
                        <th>Operaciones</th>
                    </tr>

                  </thead>
                  <tbody>
                   <% for(var i = 0 ; i<cliente.length ; i++){%>
                  <tr>
                    <td> <%= i+ 1 %></td>
                    <td> <%= cliente[i].Address %></td>
                    <td> <%= cliente[i].City %></td>
                    <td> <%= cliente[i].Country %></td>
                    <td> <%= cliente[i].District %></td>
                    <td> <%= cliente[i].FirstName %></td>
                    <td> <%= cliente[i].LastName %></td>
                    <td> <%= cliente[i].Status %></td>
                    <td> 
                        <a href="/delete/<%= cliente[i]._id %>" class="btn btn-danger">DELETE</a>
                        <a href="/update/<%= cliente[i]._id %>" class="btn btn-dark">Update</a>
                    </td>
                </tr>
                    <% } %>
                  </tbody>

                </table>

            </div>
            </div>
        </div>
    </div>
    
   
</body>
</html>